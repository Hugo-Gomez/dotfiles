! ===================
!       urxvt
! ===================

*background:   [90]#282a36
*foreground:   #eff0eb
*cursorColor:  #9aedfe

*color0:      #33303b
*color8:      #4f4b58
*color1:      #ff5c57
*color9:      #ff5c57
*color2:      #5af78e
*color10:     #5af78e
*color3:      #f3f99d
*color11:     #f3f99d
*color4:      #57c7ff
*color12:     #57c7ff
*color5:      #ff6ac1
*color13:     #ff6ac1
*color6:      #9aedfe
*color14:     #9aedfe
*color7:      #eff0eb
*color15:     #eff0eb

URxvt*scrollBar:		false
URxvt*letterSpace:		-1
URxvt.internalBorder:		10
URxvt*font:			xft:SFMono:regular:size=10
URxvt*boldFont:			xft:SFMono:bold:size=10
URxvt*cursorBlink:		true
URxvt.iso14755:			false
URxvt*utf8:			true
URxvt.keysym.C-equal:		resize-font:bigger
URxvt.keysym.C-parenright:	resize-font:smaller

! ===================
!       rofi
! ===================

rofi.fullscreen: true
rofi.color-enabled: true
rofi.color-window: argb:CC1A1B26,argb:CC1A1B26,#E0AF68
rofi.color-normal: argb:02000000,#C0CAF5,argb:02000000,argb:02000000,#E0AF68
rofi.color-active: argb:02000000,#C0CAF5,argb:02000000,argb:02000000,#C0CAF5
rofi.color-urgent: argb:02000000,#C0CAF5,argb:02000000,argb:02000000,#C0CAF5

rofi.font: SFMono 14
rofi.eh: 1
rofi.line-margin: 20
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.lines: 3
rofi.width: 100
rofi.padding: 200
rofi.bw: 0
rofi.show-icons: true
